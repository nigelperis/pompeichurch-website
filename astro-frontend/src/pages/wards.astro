---
import Layout from '~/layouts/layout.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import WardDetails from '~/components/sections/wards/ward-details.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Pompei Church | Wards">
	<main class="mx-auto max-w-4xl overflow-hidden bg-white">
		<section id="wards" class="flex flex-col p-6">
			<h1
				class="border-natgeo-yellow font-poppins mb-4 border-l-4 pl-3 text-3xl font-extrabold lg:text-4xl"
			>
				{t('nav.wards')}
			</h1>
			<WardDetails />
		</section>
	</main>
</Layout>
