import { cn } from "~/helpers/cn";
import AchievementsList from "~/components/sections/parishioners-achievements/parishioners-achievements-list.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const list = [
  {
    name: "Ms. Sasha Gonzales",
    url: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRatercvgpil3yEsaUvYXad8eK_4PxTBy73PQ&s",
    achievement: "Winner of the 2022 NatGeo Photo Contest",
    width: 300,
    height: 200
  },
  {
    name: "Mr. Arjun Mehta",
    url: "https://andrewstuder.com/wp-content/uploads/2020/04/AF3I3830-scaled.jpg",
    achievement: "Captured the viral Himalayan Eclipse of 2023",
    width: 300,
    height: 200
  },
  {
    name: "Dr. Leena Rao",
    url: "https://images.unsplash.com/photo-1504813184591-01572f98c85f",
    achievement: "Published the award-winning photo series 'Urban Silence'",
    width: 300,
    height: 200
  },
  {
    name: "Mr. Tenzing Norbu",
    url: "https://andrewstuder.com/wp-content/uploads/2020/04/AF3I3830-scaled.jpg",
    achievement: "Documented life in the Ladakh monasteries",
    width: 300,
    height: 200
  },
  {
    name: "Ms. Carolina Rivers",
    url: "https://images.unsplash.com/photo-1504813184591-01572f98c85f",
    achievement: "Finalist in Sony World Photography Awards 2021",
