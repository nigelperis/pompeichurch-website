---
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

//Components
import Layout from "~/layouts/layout.astro";
import ParishDetails from "~/components/sections/parish-history/parish-details.astro";
import { Locale } from "~/enums/locale";
import { cn } from "~/helpers/cn";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Pompei Church | Parish History">
  <main class="mx-auto max-w-4xl overflow-hidden bg-white">
    <section id="parish-history" class="flex flex-col p-6 pb-4">
      <h1
        class={cn(
          "font-roboto font-black border-natgeo-yellow mb-4 border-l-4 pl-3 text-3xl lg:text-4xl",
          {
            "font-noto-sans-kannada font-bold": lang === Locale.KOK,
          },
        )}
      >
        {t("history.title")}
      </h1>
      <h2
        class="font-noto-sans-kannada text-black pb-6 pt-2 text-2xl font-bold italic"
      >
        {t("history.subtitle")}
      </h2>
      <ParishDetails />
    </section>
  </main>
</Layout>
