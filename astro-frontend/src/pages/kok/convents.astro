---
import Layout from "~/layouts/layout.astro";
import PompeiConvent from "~/components/sections/convents/pompei-convent.astro";
import RosaMysticaConvent from "~/components/sections/convents/rosa-mystica-convent.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { Locale } from "~/enums/locale";
import { cn } from "~/helpers/cn";
import pompeiConvent from "~/assets/convents/pompei-convent.jpg";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const ogImageUrl = pompeiConvent.src;
const ogTitle = lang === Locale.KOK ? "ಕೊವೆಂತಾಂ" : "Convents";
---

<Layout title={ogTitle} image={ogImageUrl}>
  <main class="mx-auto max-w-screen-lg overflow-hidden bg-white">
    <section id="our-convents" class="flex flex-col p-6 lg:p-8">
      <h1
        class={cn(
          "border-natgeo-yellow border-l-4 pl-3 text-left text-3xl lg:text-4xl font-black",
          {
            "pt-[13px] font-bold": lang === Locale.KOK,
          },
        )}
      >
        {t("nav.convents")}
      </h1>
      <PompeiConvent />
      <div class="mx-10 border-t-2 border-yellow-300"></div>
      <RosaMysticaConvent />
    </section>
  </main>
</Layout>
