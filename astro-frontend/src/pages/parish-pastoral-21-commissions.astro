---
import Layout from "~/layouts/layout.astro";
import CommissionCard from "~/components/sections/parish-pastoral-21-commissions/commission-card.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { cn } from "~/helpers/cn";
import { Locale } from "~/enums/locale";
import type { ParishPastoral21Commission } from "~/models/parish-pastoral-21-commission";
import { listPastoral21CommissionsData } from "~/services/list-parish-pastoral-21-commissions";
import { Message } from "~/constants/message";

const lang = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(lang);
const title =
  lang === Locale.KOK ? "21 ಆಯೋಗ್" : "Parish Pastoral 21 Commissions";

let pastoral21CommissionsData: ParishPastoral21Commission[] =
  lang === Locale.EN
    ? (await listPastoral21CommissionsData({ locale: Locale.EN })) || []
    : (await listPastoral21CommissionsData({ locale: Locale.KOK })) || [];

if (pastoral21CommissionsData.length === 0) {
  pastoral21CommissionsData =
    lang === Locale.EN
      ? (await listPastoral21CommissionsData({ locale: Locale.KOK })) || []
      : (await listPastoral21CommissionsData({ locale: Locale.EN })) || [];
}
---

<Layout title={title}>
  <main class="mx-auto max-w-screen-lg overflow-hidden bg-white">
    <section id="pastoral-commissions" class="p-6">
      <div class="mb-8">
        <h1
          class={cn(
            "font-black border-l-natgeo-yellow mb-4 border-l-4 pl-3 text-3xl lg:text-4xl text-slate-900",
            {
              "font-bold pt-2": lang === Locale.KOK,
            },
          )}
        >
          {t("nav.parish-pastoral-21-commissions")}
        </h1>

        {
          pastoral21CommissionsData.length > 0 && (
            <div class="border border-gray-200 p-6 mb-8">
              <div class="flex items-center space-x-3">
                <div>
                  <h2 class="text-xl font-semibold">
                    {pastoral21CommissionsData[0].coordinatorName?.position}
                  </h2>
                  <p class="text-slate-900">
                    {pastoral21CommissionsData[0].coordinatorName?.name}
                  </p>
                </div>
              </div>
            </div>
          )
        }
      </div>

      {
        pastoral21CommissionsData.length > 0 ? (
          <div class="grid gap-8 md:grid-cols-1 lg:grid-cols-2 xl:grid-cols-2">
            {pastoral21CommissionsData[0].commissions.map((commission) => (
              <CommissionCard
                title={commission.commissionTitle}
                convenor={commission.convenor}
                subCommissions={commission.subCommissions}
              />
            ))}
          </div>
        ) : (
          <div class="p-12 text-center">
            <p class="py-8 text-center text-3xl font-semibold">
              {Message.COMMISSIONS_NOT_FOUND}
            </p>
          </div>
        )
      }
    </section>
  </main>
</Layout>
