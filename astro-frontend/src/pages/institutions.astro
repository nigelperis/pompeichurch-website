---
import Layout from "~/layouts/layout.astro";
import RosaMystica from "~/components/sections/institutions/rosa-mystica.astro";
import BethanySchool from "~/components/sections/institutions/bethany-school.astro";
import Jeevadan from "~/components/sections/institutions/jeevadaan.astro";
import Snehasadan from "~/components/sections/institutions/snehasadan.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { Locale } from "~/enums/locale";
import { cn } from "~/helpers/cn";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Pompei Church | Institutions">
  <main class="mx-auto max-w-4xl overflow-hidden bg-white">
    <section id="our-institutions" class="flex flex-col p-6">
      <h1
        class={cn(
          "font-roboto font-black border-natgeo-yellow mb-4 border-l-4 pl-3 text-3xl lg:text-4xl",
          {
            "font-noto-sans-kannada font-bold": lang === Locale.KOK,
          },
        )}
      >
        {t("nav.institutions")}
      </h1>
      <RosaMystica />
      <div class="mx-10 border-t-2 border-yellow-300"></div>
      <BethanySchool />
      <div class="mx-10 border-t-2 border-yellow-300"></div>
      <Jeevadan />
      <div class="mx-10 border-t-2 border-yellow-300"></div>
      <Snehasadan />
    </section>
  </main>
</Layout>
