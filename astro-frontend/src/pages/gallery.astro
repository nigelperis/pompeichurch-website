---
import Layout from '~/layouts/layout.astro';
import MasonryGallery from '~/components/sections/gallery/masonry-gallery.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Pompei Church | Gallery">
	<main class="mx-auto max-w-4xl overflow-hidden bg-white">
		<section id="gallery" class="flex flex-col p-6 pb-4">
			<h1
				class="border-natgeo-yellow mb-2 border-l-4 pl-3 text-3xl font-extrabold lg:text-4xl"
			>
				{t('gallery.title')}
			</h1>
			<p class="font-geist-normal text-justify text-lg text-slate-700">
				Capturing moments of grace
			</p>
			<MasonryGallery />
		</section>
	</main>
</Layout>
