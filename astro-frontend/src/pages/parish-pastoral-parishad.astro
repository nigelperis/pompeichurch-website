---
import Layout from '~/layouts/layout.astro';
import dummyImage from '~/assets/dummy-image.png';
import priestImage from '~/assets/fr-image.jpg';
import vicepresident from '~/assets/vp-image.jpg';
import ayogPresident from '~/assets/ayog-president.jpg';
import ProfileCard from '~/components/profile-card.astro';

const pastoralParishad = [
	{
		imageUrl: priestImage,
		name: "V. Rev. Fr. Rudolph Ravi D'Sa",
		subtitle: 'Parish Priest',
	},
	{
		imageUrl: vicepresident,
		name: 'Mr. Romans Lobo',
		subtitle: 'Vice-President',
	},
	{
		imageUrl: dummyImage,
		name: 'Mr. Johnson Lobo',
		subtitle: 'Secretary',
	},
	{
		imageUrl: ayogPresident,
		name: 'Mrs. Hilda Menezes',
		subtitle: '21 Pastoral Commission Coordinator',
	},
	{
		imageUrl: dummyImage,
		name: 'Mr. Johnson Lobo',
		subtitle: 'Secretary',
	},
	{
		imageUrl: dummyImage,
		name: 'Mr. Johnson Lobo',
		subtitle: 'Secretary',
	},
	{
		imageUrl: dummyImage,
		name: 'Mr. Johnson Lobo',
		subtitle: 'Secretary',
	},
];
---

<Layout title="Pompei Church | Parish Pastoral Parishad">
	<section class="mx-6 mt-5">
		<h2
			data-animate-on-view="animate-slidein-left"
			class="font-roboto relative mb-4 border-l-4 border-natgeo-yellow pl-3 text-left text-3xl font-extrabold transition-opacity duration-700"
		>
			PARISH PASTORAL PARISHAD
		</h2>
		<ul
			class="mx-auto grid w-full grid-cols-2 gap-4 gap-y-5 p-4 sm:w-[90%] sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
		>
			{
				pastoralParishad.map((parishadMember) => (
					<ProfileCard
						class="m-auto w-40"
						imageUrl={parishadMember.imageUrl}
						name={parishadMember.name}
						subtitle={parishadMember.subtitle}
					/>
				))
			}
		</ul>
	</section>
</Layout>
