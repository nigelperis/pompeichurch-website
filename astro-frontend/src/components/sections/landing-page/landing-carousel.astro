---
import { Image } from 'astro:assets';
import EmblaCarosuel from '~/components/ui/embla-carousel.astro';
import EmblaCarosuelItem from '~/components/ui/embla-carousel-item.astro';
import ciboriumImage from '~/assets/ciborium.jpg';
import sacramentImage from '~/assets/sacrament.jpg';
import maryGrottoImage from '~/assets/mary-grotto.jpg';
import adorationImage1 from '~/assets/adoration1.jpg';
import adorationImage2 from '~/assets/adoration2.jpg';
---

<EmblaCarosuel>
	<EmblaCarosuelItem>
		<Image
			src={ciboriumImage}
			alt="Golden Ciborium for the Eucharist at Our Lady of Pompei Church"
			class="h-full w-full object-cover font-geist"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={sacramentImage}
			alt="The Blessed Sacrament at Our Lady of Pompei Church"
			class="h-full w-full object-cover font-geist"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image src={adorationImage1} alt="" class="h-full w-full object-cover" />
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={maryGrottoImage}
			alt="Grotto of Mother Mary at Our Lady of Pompei Church"
			class="h-auto w-full object-cover font-geist"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image src={adorationImage2} alt="" class="h-full w-full object-cover" />
	</EmblaCarosuelItem>
</EmblaCarosuel>
