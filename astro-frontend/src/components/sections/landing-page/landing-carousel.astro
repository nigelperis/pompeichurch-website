---
import { Image } from 'astro:assets';

//Images
import ciboriumImage from '~/assets/landing-page/ciborium.jpg';
import sacramentImage from '~/assets/landing-page/sacrament.jpg';
import maryGrottoImage from '~/assets/landing-page/mary-grotto.jpg';
import adorationImage1 from '~/assets/landing-page/adoration1.jpg';
import adorationImage2 from '~/assets/landing-page/adoration2.jpg';
import galleryImage1 from '~/assets/gallery/g10.jpg';
import galleryImage2 from '~/assets/gallery/g13.jpg';
import galleryImage3 from '~/assets/gallery/g16.jpg';
import galleryImage4 from '~/assets/gallery/g11.jpg';
import galleryImage5 from '~/assets/gallery/g8.jpeg';
import galleryImage6 from '~/assets/gallery/g17.jpg';

//Components
import EmblaCarosuel from '~/components/ui/embla-carousel.astro';
import EmblaCarosuelItem from '~/components/ui/embla-carousel-item.astro';
---

<EmblaCarosuel>
	<EmblaCarosuelItem>
		<Image
			src={ciboriumImage}
			alt="Golden Ciborium for the Eucharist at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={sacramentImage}
			alt="The Blessed Sacrament at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={adorationImage1}
			alt="Adoration Image 1 at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={maryGrottoImage}
			alt="Grotto of Mother Mary at Our Lady of Pompei Church"
			class="h-auto w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={adorationImage2}
			alt="Adoration Image 2 at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
  <EmblaCarosuelItem>
		<Image
			src={galleryImage1}
			alt=""
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
  <EmblaCarosuelItem>
		<Image
			src={galleryImage2}
			alt=""
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
  <EmblaCarosuelItem>
		<Image
			src={galleryImage3}
			alt=""
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
  <EmblaCarosuelItem>
		<Image
			src={galleryImage4}
			alt=""
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
  <EmblaCarosuelItem>
		<Image
			src={galleryImage5}
			alt=""
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
  <EmblaCarosuelItem>
		<Image
			src={galleryImage6}
			alt=""
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
</EmblaCarosuel>
