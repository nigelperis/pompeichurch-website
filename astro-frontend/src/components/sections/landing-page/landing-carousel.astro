---
import { Image } from 'astro:assets';

//Images
import ciboriumImage from '~/assets/landing-page/ciborium.jpg';
import sacramentImage from '~/assets/landing-page/sacrament.jpg';
import maryGrottoImage from '~/assets/landing-page/mary-grotto.jpg';
import adorationImage1 from '~/assets/landing-page/adoration1.jpg';
import adorationImage2 from '~/assets/landing-page/adoration2.jpg';

//Components
import EmblaCarosuel from '~/components/ui/embla-carousel.astro';
import EmblaCarosuelItem from '~/components/ui/embla-carousel-item.astro';
---

<EmblaCarosuel>
	<EmblaCarosuelItem>
		<Image
			src={ciboriumImage}
			alt="Golden Ciborium for the Eucharist at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={sacramentImage}
			alt="The Blessed Sacrament at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={adorationImage1}
			alt="Adoration Image 1 at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={maryGrottoImage}
			alt="Grotto of Mother Mary at Our Lady of Pompei Church"
			class="h-auto w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem>
		<Image
			src={adorationImage2}
			alt="Adoration Image 2 at Our Lady of Pompei Church"
			class="h-full w-full object-cover"
		/>
	</EmblaCarosuelItem>
</EmblaCarosuel>
