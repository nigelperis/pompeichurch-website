---
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import { cn } from '~/helpers/cn';

import HoverableLink from '~/components/ui/hoverable-link.astro';
import Card from '~/components/normal-card.astro';
import { listObituaries } from '~/services/obituaries/list-obituaries';
import ShareLink from '~/components/ui/share-link.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const obituaryLink = lang === 'en' ? '/obituary' : '/kok/obituary';

import { format } from 'date-fns';

const obituaryData = await listObituaries();

const obituaryDataFormatted = obituaryData?.length
  ? obituaryData.map((obituary) => ({
      ...obituary,
      formattedDate: obituary.dateOfDeath
        ? format(new Date(obituary.dateOfDeath), 'dd-MM-yyyy')
        : 'Unknown Date',
    }))
  : [];

const featuredObituary = obituaryData.length > 4 ? obituaryData[4] : null;
---

<section class="mt-1 flex flex-col lg:mx-28 lg:mb-3 lg:min-h-[70svh] lg:justify-evenly">
	<h1
		data-aos="fade-right"
		class={cn(
			'mx-6 mb-4 inline-block border-l-4 border-natgeo-yellow pl-3 font-poppins text-[27px] font-extrabold xs:text-2xl lg:mx-0 lg:text-4xl',
			{
				'font-noto-sans-kannada': lang === 'kok',
			},
		)}
	>
		{t('nav.obituary')}
	</h1>

	{obituaryDataFormatted.length > 0 ? (
		<>
			<!-- Obituaries List -->
			<div
				class="scrollbar-none my-4 flex w-full scroll-ml-6 space-x-8 overflow-x-auto overflow-y-hidden pl-6 pr-3 lg:justify-center xl:space-x-10"
			>
				{obituaryDataFormatted.slice(0, 4).map((obituary) => (
					<div class="relative">
						<Card
							imageUrl={obituary.image?.url}
							title={`${obituary.konkaniName} (${obituary.age})`}
							subtitle={`ಮರಣ್ : ${obituary.formattedDate}`}
						/>
						<ShareLink
							class="absolute bottom-4 right-4"
							shareData={{
								url: `${new URL(
									lang === 'en'
										? `/obituary?id=${obituary.englishName.replace(/\s+/g, '-').toLowerCase()}`
										: `/kok/obituary?id=${obituary.englishName.replace(/\s+/g, '-').toLowerCase()}`,
									Astro.url
								).href}`,
								title: `${obituary.konkaniName} - ${obituary.ward}`,
							}}
							size={24}
						/>
					</div>
				))}
			</div>

			{featuredObituary && (
				<div class="relative flex-shrink-0 transform snap-start overflow-hidden border shadow-sm transition-all duration-200 ease-in-out lg:hidden">
					<div class="opacity-50 blur-md">
						<Card
							imageUrl={featuredObituary.image?.url}
							title={`${featuredObituary.konkaniName} (${featuredObituary.age})`}
							subtitle={`ಮರಣ್ : ${featuredObituary.dateOfDeath}`}
						/>
					</div>
					<div class="absolute inset-0 flex items-center justify-center">
						<HoverableLink href={obituaryLink} class="mb-2 mt-2 inline-block text-xl font-bold text-black">
							{t('ui.view-all')}
						</HoverableLink>
					</div>
				</div>
			)}

			<!-- View All Button -->
			<div class="hidden justify-center pb-2 lg:flex">
				<HoverableLink href={obituaryLink}>{t('ui.view-all')}</HoverableLink>
			</div>
		</>
	) : (
		<p class="text-center font-semibold text-3xl py-8">No Obituaries!</p>
	)}
</section>
