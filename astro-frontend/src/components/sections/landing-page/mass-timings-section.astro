---
import { getImage } from 'astro:assets';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import massInteriorImage from '~/assets/landing-page/mass-interior.jpg';
import { cn } from '~/helpers/cn';

const optimizedmassInteriorImage = await getImage({ src: massInteriorImage });
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
	style={{ backgroundImage: `url(${optimizedmassInteriorImage.src})` }}
	class="relative mt-4 flex flex-col bg-black/60 bg-cover bg-center p-8 text-white bg-blend-darken lg:p-28"
>
	<h1
		data-aos="fade-right"
		class={cn(
			'mb-4 inline-block border-l-4 border-natgeo-yellow pl-3 font-poppins text-3xl font-extrabold xs:text-2xl lg:text-4xl',
			{
				'font-noto-sans-kannada': lang === 'kok',
			},
		)}
	>
		{t('landing.mass-timings')}
	</h1>

	<ul
		class={cn(
			'space-y-3 lg:space-y-4 font-poppins text-sm lg:text-xl text-white leading-relaxed',
			{
				'font-noto-sans-kannada': lang === 'kok',
			},
		)}
	>
		<li>
			<strong>{t('landing.mon-sat')}</strong> 6:45 AM ({
				t('landing.daily-mass')
			})
		</li>
		<li>
			<strong>{t('landing.friday')}</strong> 4:45 PM ({
				t('landing.friday-note')
			})
		</li>
		<li>
			<strong>{t('landing.saturday')}:</strong> 4 PM ({
				t('landing.saturday-note')
			})
		</li>
		<li>
			<strong>{t('landing.sunday')}:</strong> 7:30 AM & 10:15 AM {
				t('landing.adoration-note')
			}
		</li>
		<li>
			<strong>{t('landing.catechism')}:</strong>
			{t('landing.catechism-note')}
		</li>
		<li>
			<strong>{t('landing.novena')}:</strong>
			{t('landing.novena-note')}
		</li>
	</ul>
</section>
