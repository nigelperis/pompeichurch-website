---
import { getImage } from 'astro:assets';

import { getLangFromUrl, useTranslations } from '~/i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

import massInteriorImage from '~/assets/mass-interior.jpg';
import { cn } from '~/helpers/cn';
const optimizedmassInteriorImage = await getImage({ src: massInteriorImage });
---

<section
	style={{ backgroundImage: `url(${optimizedmassInteriorImage.src})` }}
	class="relative bg-black/60 bg-cover bg-center text-white bg-blend-darken"
>
	<div class="relative flex items-center justify-center p-5">
		<div class="max-w-sm">
			<h2
				class="border-l-4 border-natgeo-yellow pl-3 font-poppins text-3xl font-extrabold"
				data-aos="fade-right"
			>
				{t('landing.mass-timings')}
			</h2>

		<div class="p-5 pb-3">
				<ul
					class={cn('space-y-2 font-poppins text-sm text-white', {
						'font-noto-sans-kannada': lang === 'kok',
					})}
				>
					<li>
						<strong>{t('landing.mon-sat')}</strong> 6:45 AM ({
							t('landing.daily-mass')
						})
					</li>
					<li>
						<strong>{t('landing.friday')}</strong> 4:45 PM ({
							t('landing.friday-note')
						})
					</li>
					<li>
						<strong>{t('landing.saturday')}:</strong> 4 PM ({
							t('landing.saturday-note')
						})
					</li>
					<li>
						<strong>{t('landing.sunday')}:</strong> 7:30 AM & 10:15 AM {
							t('landing.adoration-note')
						}
					</li>
					<li>
						<strong>{t('landing.catechism')}:</strong>
						{t('landing.catechism-note')}
					</li>
					<li>
						<strong>{t('landing.novena')}:</strong>
						{t('landing.novena-note')}
					</li>
				</ul>
			</div>
		</div>
	</div>
</section>
