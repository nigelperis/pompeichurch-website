---
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import churchHeroMobile from "~/assets/landing-page/church-hero.webp";
import churchHeroDesktop from "~/assets/landing-page/church.png";
import { cn } from "~/helpers/cn";
import { Locale } from "~/enums/locale";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative w-full">
  <!-- Mobile hero -->
  <div
    class="relative h-[40vh] bg-cover bg-center bg-no-repeat md:hidden"
    style={`background-image: url(${churchHeroMobile.src})`}
  >
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/65"></div>
    <div
      class="relative flex flex-col items-center justify-center h-full text-center px-4 pt-35"
      data-aos="fade-up"
    >
      <h1
        class={cn(
          "text-2xl md:text-5xl font-semibold text-natgeo-yellow tracking-wide",
          { "font-semibold tracking-wide": lang === Locale.KOK },
        )}
        data-aos="fade-up"
        data-aos-delay="700"
      >
        {t("landing.church-name")}
      </h1>
      <p
        class="mt-1 text-md md:text-3xl text-white"
        data-aos="fade-up"
        data-aos-delay="900"
      >
        {t("landing.town-name")}
      </p>
    </div>
  </div>

  <!-- Desktop hero -->
  <div
    class="hidden md:block relative h-[85vh] bg-cover bg-center bg-no-repeat object-top"
    style={`background-image: url(${churchHeroDesktop.src})`}
  >
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/65"></div>
    <div
      class="relative flex flex-col items-center justify-center h-full text-center px-4 pt-110"
      data-aos="fade-up"
    >
      <h1
        class={cn(
          "text-5xl font-semibold text-natgeo-yellow tracking-wide",
          { "font-semibold tracking-wide": lang === Locale.KOK },
        )}
        data-aos="fade-up"
      >
        {t("landing.church-name")}
      </h1>
      <p
        class="mt-5 text-md text-3xl text-white"
        data-aos="fade-up"
      >
        {t("landing.town-name")}
      </p>
    </div>
  </div>
</section>
