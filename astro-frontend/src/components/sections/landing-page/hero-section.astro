---
import { getImage } from "astro:assets";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import skyImage from "~/assets/landing-page/sky-bg.webp";
import churchHeroImage from "~/assets/landing-page/church-hero.webp";
import { cn } from "~/helpers/cn";
import { Locale } from "~/enums/locale";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const optimizedSkyImage = await getImage({ src: skyImage });
const optimizedChurchHeroImage = await getImage({ src: churchHeroImage });
---

<head>
  <link
    rel="preload"
    as="image"
    href={optimizedSkyImage.src}
    type="image/webp"
  />
  <link
    rel="preload"
    as="image"
    href={optimizedChurchHeroImage.src}
    type="image/webp"
  />
</head>
<section
  class="relative h-screen w-screen bg-black/20 bg-cover bg-blend-darken"
  style={{
    backgroundImage: `url(${optimizedSkyImage.src})`,
  }}
>
  <div class="absolute inset-0 bg-white opacity-70 bg-blend-darken"></div>

  <div
    class="relative mx-4 h-[30vh] overflow-hidden rounded-b-full bg-yellow-50 sm:mx-auto sm:h-[40vh] sm:w-[80vw] md:h-80 md:w-96 xl:h-96 xl:w-5/12"
  >
    <div
      class="animated-background mx-auto h-full w-full bg-cover bg-center bg-no-repeat"
      style={{ backgroundImage: `url(${optimizedChurchHeroImage.src})` }}
    >
    </div>
  </div>
  <h1
    data-aos="fade-up"
    data-aos-delay="700"
    class={cn(
      "mt-6 text-center font-roboto text-4xl lg:text-5xl font-semibold tracking-wide",
      {
        "font-noto-sans-kannada font-semibold tracking-wide":
          lang === Locale.KOK,
      }
    )}
  >
    {t("landing.church-name")}
  </h1>
  <p
    data-aos="fade-up"
    data-aos-delay="900"
    class={cn("mt-2 text-center font-roboto text-3xl", {
      "font-noto-sans-kannada": lang === Locale.KOK,
    })}
  >
    {t("landing.town-name")}
  </p>
  <div class="mx-auto">
    <img
      src="/temp-logo.webp"
      alt="Our Lady of Pompei Church logo"
      width={190}
      height={190}
      data-aos="fade-up"
      data-aos-delay="1100"
      class="mx-auto my-4 opacity-0"
    />
  </div>
  <!-- TODO: Remove below code later -->
  <div
    class="fixed bottom-4 left-0 right-0 flex justify-center z-50 px-4"
    data-aos="fade-up"
    data-aos-delay="1500"
  >
    <a
      href="https://www.youtube.com/live/D2L0KUvmZB4"
      target="_blank"
      rel="noopener noreferrer"
      class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow-lg hover:bg-blue-700 transition-colors text-center max-w-md w-full"
    >
      <div class="flex flex-col items-center">
        <span class="font-semibold">Watch live:</span>
        <span class="text-xl font-bold"
          >Golden Birthday & 21st Ordination DayðŸŽ‰</span
        >
        <span class="mt-1">Rev. Fr Rudolph Ravi D'sa</span>
      </div>
    </a>
  </div>
</section>
<style>
  @keyframes animatedBackground {
    from {
      transform: scale(1.2);
    }
    to {
      transform: scale(1);
    }
  }
  .animated-background {
    animation: animatedBackground 2s ease-out forwards;
  }
</style>
