<section
	class="mx-6 mb-4 mt-3 flex flex-col lg:mx-28 lg:min-h-[70svh] lg:justify-evenly"
>
	<h1
		data-aos="fade-right"
		class={cn(
			'mb-6 inline-block border-l-4 border-natgeo-yellow pl-3 font-poppins text-3xl font-extrabold xs:text-2xl lg:text-4xl',
			{ 'font-noto-sans-kannada': lang === 'kok' },
		)}
	>
		{t('landing.upcoming-events')}
	</h1>

	<!-- Mobile UI -->
	{filteredEvents.length > 1 ? (
		<div class="-mx-[1.5rem] block md:hidden">
			<EmblaCarousel showArrows={true}>
				{filteredEvents.map((event) =>
					event.eventImage?.url ? (
						<EmblaCarouselItem>
							<NetworkImage
								src={event.eventImage?.url}
								alt="Upcoming Event"
								class="w-full"
								width={event.eventImage?.width ?? 500}
								height={event.eventImage?.height ?? 200}
							/>
						</EmblaCarouselItem>
					) : (
						<EmblaCarouselItem>
							<img
								src={stayTunedImage}
								alt="Stay Tuned"
								class="w-full"
								width={1000}
								height={1000}
							/>
						</EmblaCarouselItem>
					)
				)}
			</EmblaCarousel>
		</div>
	) : (
		<div class="block md:hidden">
			{eventImages[0].isRemote ? (
				<NetworkImage
					src={eventImages[0].src}
					alt={eventImages[0].alt ?? 'Upcoming Event'}
					class="w-full"
					width={eventImages[0].width ?? 500}
					height={eventImages[0].height ?? 300}
				/>
			) : (
				<Image
					src={eventImages[0].src}
					alt="Stay Tuned"
					class="w-full"
					width={eventImages[0].width ?? 1000}
					height={eventImages[0].height ?? 1000}
				/>
			)}
		</div>
	)}

	<!-- Web UI -->
	<div class="hidden justify-center gap-4 md:flex">
		{eventImages.map((image) =>
			image.isRemote ? (
				<NetworkImage
					src={image.src}
					alt={image.alt ?? 'Upcoming Event'}
					class="rounded-sm md:w-1/4"
					width={500}
					height={300}
				/>
			) : (
				<Image
					src={image.src}
					alt={image.alt ?? 'Stay Tuned'}
					class="rounded-sm md:w-1/4"
					width={1000}
					height={1000}
				/>
			)
		)}
	</div>
</section>
