---
import ObituaryCard from '~/components/obituary-card.astro';
import { obituaryData } from '~/constants/obituary-list';
---

<div
	class="mx-auto grid w-full max-w-4xl gap-x-20 gap-y-10 xs:grid-cols-1 md:grid-cols-2"
>
	{
		obituaryData.map((item) => (
			<ObituaryCard
				name={item.name}
				imageUrl={item.imageUrl}
				description={item.description}
				age={item.age}
				ward={item.ward}
				date={item.date}
				class="m-auto"
			/>
		))
	}
</div>
