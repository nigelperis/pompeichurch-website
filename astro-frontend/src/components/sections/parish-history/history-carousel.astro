---
import { Image } from 'astro:assets';
import EmblaCarosuel from '~/components/ui/embla-carousel.astro';
import EmblaCarosuelItem from '~/components/ui/embla-carousel-item.astro';
import churchBanner from '~/assets/church-banner.jpg';
import churchHeroImage from '~/assets/church-hero.jpg';
---

<EmblaCarosuel>
	<EmblaCarosuelItem class="aspect-square">
		<Image src={churchBanner} alt="Banner Image" class="w-full object-cover" />
	</EmblaCarosuelItem>
	<EmblaCarosuelItem class="aspect-square">
		<Image
			src={churchHeroImage}
			alt="Image of Our lady of Pompei Church"
			class="w-full object-cover"
		/>
	</EmblaCarosuelItem>
	<EmblaCarosuelItem class="aspect-square">
		<Image src={churchBanner} alt="Church Banner" class="w-full object-cover" />
	</EmblaCarosuelItem>
</EmblaCarosuel>
