---
import { Image } from "astro:assets";
import NetworkImage from "~/components/ui/network-image.astro";
import Badge from "~/assets/icons/badge.svg";
import placeholderImage from "~/assets/static-assets/blank.jpeg";

interface Props {
  name: string;
  url: string;
  achievement: string;
  width?: number;
  height?: number;
}

const { name, url, achievement, width, height } = Astro.props;
---

<div
  class="mx-auto mt-20 mb-9 w-[300px] bg-white border border-slate-200 rounded-lg"
>
  {
    url ? (
      <NetworkImage
        src={url}
        alt={name}
        width={width ?? 300}
        height={height ?? 200}
        class="-mt-15 mx-auto w-[250px] h-[210px] rounded-lg object-fill"
      />
    ) : (it 
      <Image
        src={placeholderImage}
        alt="Blank Profile Image"
        class="-mt-15 mx-auto w-[250px] h-[210px] rounded-lg object-fill"
        width={width}
        height={height}
      />
    )
  }
  <h2 class="mt-3 mx-2 text-balance text-center text-3xl font-bold text-black lg:text-2xl">
    {name}
  </h2>
  <p class="mt-2 mx-1 text-balance text-center text-xl text-slate-900 lg:text-lg">
    {achievement}
  </p>
  <div class="mt-9 flex flex-row justify-between">
    <Badge class="mt-4 -ml-5 w-20 h-20" />
    <a href="/parishioners-achievements" class="my-4 mx-4 pt-4 text-blue-500">
      Read More
    </a>
  </div>
</div>
