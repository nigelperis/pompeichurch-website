---
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { Locale } from "~/enums/locale";

const lang = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(lang);
---

<!-- Notification Prompt for data loss on language or fields change -->
<div
  id="confirmation-prompt"
  class="fixed top-20 left-4 right-4 sm:left-1/2 sm:right-auto sm:-translate-x-1/2 sm:max-w-xl sm:w-full
              bg-white border border-gray-200 shadow-xl rounded-lg px-4 py-4 text-gray-800
              z-[9999] hidden"
  role="alert"
  aria-live="polite"
>
  <div class="flex flex-col sm:flex-row sm:items-center gap-3 w-full">
    <div class="flex items-start gap-3 sm:items-center">
      <span class="bell-icon text-2xl flex-shrink-0 mt-0.5 sm:mt-0">ðŸš¨</span>
      <p id="confirmation-message" class="text-base font-medium flex-1" aria-live="assertive"></p>
    </div>

    <div class="flex w-full sm:w-auto gap-2 sm:ml-auto">
      <button
        id="confirmed"
        class="w-1/2 sm:w-auto bg-natgeo-yellow text-black font-semibold px-4 py-2 rounded-md
                    hover:bg-yellow-400 transition text-sm text-center sm:whitespace-nowrap cursor-pointer"
      >
        <span class="sm:hidden">{t("yes")}</span>
        <span class="hidden sm:inline">{t("yes")}</span>
      </button>
      <button
        id="dismissed"
        class="w-1/2 sm:w-auto text-gray-500 hover:text-gray-700 underline text-sm text-center sm:whitespace-nowrap cursor-pointer"
      >
        <span class="sm:hidden">{t("no")}</span>
        <span class="hidden sm:inline">{t("no")}</span>
      </button>
    </div>
  </div>
</div>
