---
import ProfileCard from "~/components/profile-card.astro";
import type { ParishFinanceCommittee } from "~/models/parish-finance-committee";

const { parishFinanceCommittee } = Astro.props;
---

<div
  class="grid-cols-1 mx-auto grid w-full max-w-4xl gap-x-20 gap-y-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
>
  {
    parishFinanceCommittee.map((member: ParishFinanceCommittee) => (
      <ProfileCard
        class="m-auto"
        url={member.image?.url}
        name={member.name}
        subtitle={member.position}
        width={300}
        height={300}
      />
    ))
  }
</div>
