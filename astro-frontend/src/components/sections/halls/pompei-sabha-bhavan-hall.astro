---
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { Image } from "astro:assets";

//Images
import pompeiSabhaBhavanImage from "~/assets/halls/pompei-sabha-bhavan.jpg";
import pbs1 from "~/assets/halls/psb-int-1.jpg";
import pbs2 from "~/assets/halls/psb-int-2.jpg";
import pbs4 from "~/assets/halls/psb-ext-2.jpg";
import pbs6 from "~/assets/halls/psb-ext-4.jpg";
import { Locale } from "~/enums/locale";
import { cn } from "~/helpers/cn";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<h1
  class={cn(
    "border-natgeo-yellow border-l-4 pl-3 text-left text-3xl lg:text-4xl font-black font-noto-sans-kannada",
    { "pt-[13px] font-bold": lang === Locale.KOK },
  )}
>
  {t("hall.title")}
</h1>
<div class="flex items-center justify-center py-6 lg:py-8">
  <Image
    src={pompeiSabhaBhavanImage}
    alt="Exterior view of Pompei Sabha Bhavan at Our Lady of Pompei Church"
  />
</div>
<div class="font-noto-sans-kannada pb-4">
  <p class="mb-4 text-lg font-bold">{t("hall.capacity")}: 500</p>

  <h4 class="mb-2 text-lg font-bold">{t("hall.timings")}:</h4>

  <div class="text-gray-700">
    <p class="mb-1 font-semibold">{t("hall.day")}:</p>
    <ul class="mb-4 list-inside list-disc">
      <li>{t("hall.music-stop")}: 3:00 PM</li>
      <li>{t("hall.vacate")}: 3:30 PM</li>
    </ul>

    <p class="mb-1 font-semibold">{t("hall.night")}:</p>
    <ul class="list-inside list-disc">
      <li>{t("hall.music-stop")}: 10:15 PM</li>
      <li>{t("hall.vacate")}: 10:45 PM</li>
    </ul>
  </div>
</div>
<h2 class="font-noto-sans-kannada pb-4 text-lg font-bold text-slate-800">
  Pompei Sabha Bhavan Interior
</h2>
<div class="font-noto-sans-kannada flex flex-col gap-4 pb-4 md:flex-row">
  <Image
    src={pbs1}
    alt="Pompei Sabha Bhavan Interior Image 1"
    class="w-full md:w-1/2"
  />
  <Image
    src={pbs2}
    alt="Pompei Sabha Bhavan Interior Image 2"
    class="w-full md:w-1/2"
  />
</div>
<h2 class="font-noto-sans-kannada pb-4 text-lg font-bold text-slate-800">
  Pompei Sabha Bhavan Exterior
</h2>
<div class="flex flex-col gap-4 md:flex-row">
  <Image
    src={pbs4}
    alt="Pompei Sabha Bhavan Exterior Image 1"
    class="w-full md:w-1/2"
  />
  <Image
    src={pbs6}
    alt="Pompei Sabha Bhavan Exterior Image 2"
    class="w-full md:w-1/2"
  />
</div>