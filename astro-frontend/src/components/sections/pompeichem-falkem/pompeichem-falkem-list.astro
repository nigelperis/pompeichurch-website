---
import MagazineCard from '~/components/magazine-card.astro';
import { magazines } from '~/constants/pompeichem-falkem';
---

<div
	class="mx-auto grid w-full max-w-4xl grid-cols-2 gap-x-20 gap-y-8 pt-10 xs:grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2"
>
	{magazines.map((magazine) => (
		<MagazineCard
			title={magazine.title}
			imageUrl={magazine.imageUrl}
			downloadUrl={magazine.downloadUrl}
		/>
	))}
</div>
