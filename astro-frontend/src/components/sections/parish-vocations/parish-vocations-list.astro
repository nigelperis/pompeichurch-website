---
import { parishVocations } from '~/constants/parish-vocations.ts';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import VocationCard from '~/components/vocation-card.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
	class="mx-auto grid w-full grid-cols-2 gap-x-20 gap-y-10 pt-10 xs:grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
>
	{
		parishVocations.map((priest) => (
			<VocationCard
        imageUrl={priest.imageUrl}
				name={t(`priest.${priest.name}`)}
        ward={priest.ward}
				dob={priest.dob}
        dod={priest.dod}
        congregation={priest.congregation}
        parents={priest.parents}
			/>
		))
	}
</div>
