---
import { parishPriests } from '~/constants/parish-priests';
import ProfileCard from '~/components/profile-card.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
	class="xs:grid-cols-1 mx-auto grid w-full grid-cols-2 gap-x-20 gap-y-10 pt-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
>
	{
		parishPriests.map((priest) => (
			<ProfileCard
				class="m-auto"
				imageUrl={priest.imageUrl}
				name={t(`priest.${priest.name}`)}
				date={priest.date}
			/>
		))
	}
</div>
