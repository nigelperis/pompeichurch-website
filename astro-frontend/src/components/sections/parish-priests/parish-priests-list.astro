---
import ProfileCard from "~/components/profile-card.astro";
import type { ParishPriests } from "~/models/parish-priest";

const { parishPriests } = Astro.props;
---

<div
  class="grid-cols-1 mx-auto grid w-full gap-x-20 gap-y-10 pt-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
>
  {
    parishPriests.map((priest: ParishPriests) => (
      <ProfileCard
        class="m-auto"
        url={priest.image?.url}
        name={priest.name}
        date={priest.servicePeriod}
      />
    ))
  }
</div>
