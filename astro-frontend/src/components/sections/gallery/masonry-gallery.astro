import image5 from '~/assets/sacrament1.jpg';
import image6 from '~/assets/charel.jpg';
import image7 from '~/assets/mary-inside.jpg';
import image8 from '~/assets/monthi-festh.jpg';
import image9 from '~/assets/monthi-festh1.jpg';
import image10 from '~/assets/g3.jpg';
import image11 from '~/assets/g4.jpg';
import image12 from '~/assets/g5.jpg';
import image13 from '~/assets/g6.jpg';
import image14 from '~/assets/g7.jpg';
import image15 from '~/assets/g8.jpeg';
import image16 from '~/assets/g9.jpg';
import image17 from '~/assets/g10.jpg';
import image18 from '~/assets/g11.jpg';
import image19 from '~/assets/g12.jpg';
import image20 from '~/assets/g13.jpg';
import image21 from '~/assets/g14.jpg';
import image22 from '~/assets/g15.jpg';
import image23 from '~/assets/g16.jpg';
import image24 from '~/assets/g17.jpg';
import image25 from '~/assets/g18.jpg';
import image26 from '~/assets/g19.jpg';


const images = [
	image1,
	image2,
	image3,
	image4,
	image5,
	image6,
	image7,
	image8,
	image9,
	image10,
	image11,
	image12,
	image13,
	image14,
	image15,
	image16,
	image17,
	image18,
	image19,
	image20,
	image21,
	image22,
	image23,
	image24,
	image25,
	image26
] as const;
---

<div class="masonry-grid relative m-4 mx-auto min-h-screen w-full">
	{
		images.map((image) => (
			<a
				href="javascript:void(0);"
				data-pswp-src={image.src}
				data-pswp-width={image.width}
				data-pswp-height={image.height}
				class="masonry-grid-item-link masonry-grid-item inline-block w-1/2 lg:w-1/3"
			>
				<Image
					src={image}
					class="overflow-hidden rounded-md object-cover p-1"
					alt={'Gallery image'}
				/>
			</a>
		))
	}
</div>

<script>
	import Masonry from 'masonry-layout';
	import 'photoswipe/style.css';
	import PhotoSwipeLightbox from 'photoswipe/lightbox';
	import imagesLoaded from 'imagesloaded';

	const masonryGrid = document.querySelector<HTMLDivElement>('.masonry-grid')!;

	const masonry = new Masonry(masonryGrid, {
		itemSelector: '.masonry-grid-item',
		resize: true,
		percentPosition: true,
		transitionDuration: 300,
	});

	imagesLoaded(masonryGrid).on('progress', () => {
		masonry?.layout?.();
	});

	const lightbox = new PhotoSwipeLightbox({
		mainClass: 'pswp--custom-icon-colors',
		gallery: '.masonry-grid',
		children: 'a',
		pswpModule: () => import('photoswipe'),
	});

	lightbox.init();
</script>