---
import NetworkImage from '~/components/ui/network-image.astro';
import type { ParishPastoralCouncil } from '~/models/parish-pastoral-council';

const { pastoralCouncilData } = Astro.props as { pastoralCouncilData : ParishPastoralCouncil[] };
const { pastoralCouncilImage } = Astro.props;
---
<div>
	<NetworkImage
			src={pastoralCouncilImage.pastoralCouncilImage.url}
			alt="Parish Pastoral Council of Our Lady of Pompei Church"
			width={pastoralCouncilImage.pastoralCouncilImage.width}
			height={pastoralCouncilImage.pastoralCouncilImage.height}
			class="w-full rounded-sm object-contain pb-4 pt-4"
		/>
	<table class="mx-auto w-full max-w-4xl border border-gray-200">
		<tbody>
			{
				pastoralCouncilData.map((member) => (
					<tr class="hover:bg-gray-50">
						<td class="border-b border-gray-200 px-4 py-2 text-sm lg:text-lg lg:text-gray-800">
							{member.sNo}
						</td>
						<td class="border-b border-gray-200 px-4 py-2 text-sm lg:text-lg lg:text-gray-800">
							{member.name}
						</td>
						<td class="border-b border-gray-200 px-4 py-2 text-sm lg:text-lg lg:text-gray-800">
							{member.association}
						</td>
						<td class="border-b border-gray-200 px-4 py-2 text-sm lg:text-lg lg:text-gray-800">
							{member.position}
						</td>
					</tr>
				))
			}
		</tbody>
	</table>
</div>
