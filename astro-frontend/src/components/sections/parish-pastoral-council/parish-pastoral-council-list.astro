---
import { pastoralCouncil } from '~/constants/pastoral-council-members';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import { Image } from 'astro:assets';
import pastoralCouncilImage from '~/assets/pastoral-council.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div>
	<Image
		src={pastoralCouncilImage}
		alt="Parish Pastoral Council of Our Lady of Pompei Church"
		class="w-full rounded-sm object-contain pb-4 pt-4"
	/>
	<table class="mx-auto w-full max-w-4xl border border-gray-200">
		<tbody>
			{
				pastoralCouncil.map((member) => (
					<tr class="hover:bg-gray-50">
						<td class="border-b border-gray-200 px-4 py-2 text-sm lg:text-lg lg:text-gray-800">
							{t(member.name)}
						</td>
						<td class="border-b border-gray-200 px-4 py-2 text-sm lg:text-lg lg:text-gray-800">
							{t(member.org)}
						</td>
						<td class="border-b border-gray-200 px-4 py-2 text-sm lg:text-lg lg:text-gray-800">
							{t(member.position)}
						</td>
					</tr>
				))
			}
		</tbody>
	</table>
</div>
