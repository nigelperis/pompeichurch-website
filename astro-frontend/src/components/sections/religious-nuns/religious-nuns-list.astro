---
import VocationCard from "~/components/vocation-card.astro";
import type { ReligiousVocationItem } from "~/services/religious-vocations/get-religious-vocations";

interface Props {
  nuns: ReligiousVocationItem[];
}

const { nuns } = Astro.props;
---

<div
  class="xs:grid-cols-1 mx-auto grid w-full grid-cols-1 gap-x-20 gap-y-10 pt-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
>
  {
    nuns.map((nun) => (
      <VocationCard
        imageUrl={nun.imageUrl || ""}
        imageWidth={nun.imageWidth}
        imageHeight={nun.imageHeight}
        name={nun.name}
        ward={nun.ward || ""}
        dob={nun.dob}
        dod={nun.dod}
        congregation={nun.congregation}
        parents={nun.parents}
        role={nun.role}
      />
    ))
  }
</div>
