---
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

interface SubCommissions {
  title: string;
  secretary: string;
}

interface Props {
  title: string;
  convenor: string;
  subCommissions: SubCommissions[];
}

const { title, convenor, subCommissions } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="border border-gray-200 overflow-hidden">
  <div class="bg-gradient-to-r from-yellow-50 to-yellow-50 border-b border-yellow-200 p-6">
    <div class="flex items-start space-x-4">
      <div class="flex-1 min-w-0">
        <h3 class="text-xl font-bold leading-tight">
          {title}
        </h3>
        <div class="mt-3 flex items-center space-x-2">
          <span class="text-sm font-medium text-yellow-700 bg-yellow-100 px-3 py-1 rounded-full">
            {t("commissions.convenor")}
          </span>
          <span class="text-sm text-gray-800 font-medium">
            {convenor}
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="p-6">

    <div class="space-y-4">
      {subCommissions?.map((subCommission, index) => (
        <div class="group bg-gray-50 p-4">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
            <div class="flex-1">
              <h5 class="font-semibold text-gray-800 text-base leading-tight">
                {subCommission.title}
              </h5>
            </div>
            <div class="flex items-center space-x-2 sm:flex-shrink-0">
              <div class="flex items-center space-x-2">
                <span class="text-sm text-gray-700 font-medium">
                  {subCommission.secretary}
                </span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>