---
import Phone from "@lucide/astro/icons/phone";
import { Facebook } from "simple-icons-astro";
import { Youtube } from "simple-icons-astro";
import { Instagram } from "simple-icons-astro";
import Mail from "@lucide/astro/icons/mail";

const currentYear = new Date().getFullYear();
---

<footer
  class="text-white border-natgeo-yellow-400 border-t-2 bg-gray-900 p-2 pb-8 text-sm xl:px-28"
>
  <div class="flex flex-col-reverse items-center justify-between">
    <div class="mt-6 font-roboto text-center">
      <p class="text-sm text-gray-100">
        &copy;{currentYear}, Our Lady of Pompei Church. All Rights Reserved.
      </p>
      <p class="mt-6 text-sm
      text-gray-100">
        Crafted with ✝️ using
        <a
          href="https://docs.astro.build/"
          target="_blank"
          rel="noopener noreferrer"
          class="font-bold text-purple-700 relative after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[2px] after:bg-purple-700 after:transition-all after:duration-300 hover:after:w-full"
        >
          Astro
        </a>
      </p>
      <p class="mt-6">
        <b>Powered by</b>: Commission for Social Communication, Gurpur Kaikamba.
      </p>
    </div>
    <div class="mt-6 flex items-center space-x-5">
      <a
        href="mailto:pompeichurchgurpur@gmail.com"
        target="_blank"
        class="transition-transform hover:scale-110"
        aria-label="Email pompeichurchgurpur@gmail.com"
      >
        <Mail size={24} />
      </a>
      <a
        href="https://www.facebook.com/ladyofpompeichurch.gurpur/"
        target="_blank"
        class="transition-transform hover:scale-110"
        aria-label="Visit our Facebook page"
      >
        <Facebook size={24} />
      </a>
      <a
        href="https://www.instagram.com/our_lady_of_pompei_church/"
        target="_blank"
        class="transition-transform hover:scale-110"
        aria-label="Follow us on Instagram"
      >
        <Instagram size={24} />
      </a>
      <a
        href="https://www.youtube.com/@pompeichurchmedia8386"
        target="_blank"
        class="transition-transform hover:scale-110"
        aria-label="Subscribe to our YouTube channel"
      >
        <Youtube size={24} />
      </a>
      <a
        href="tel:+918277939340"
        target="_blank"
        class="transition-transform hover:scale-110"
        aria-label="Call +91 82779 39340"
      >
        <Phone size={24} />
      </a>
    </div>
  </div>
</footer>
