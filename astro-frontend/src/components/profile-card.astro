---
import { Image } from 'astro:assets';
import { cn } from '~/helpers/cn';

interface Props {
	name: string;
	imageUrl: ImageMetadata;
	date?: string;
	subtitle?: string;
	class?: string;
}

const { name, date, subtitle, class: className, imageUrl } = Astro.props;
---

<li
	class={cn(
		'hover:scale-[1.03] hover:shadow-lg snap-start first:snap-align-none max-w-xs flex-shrink-0 transform overflow-hidden rounded-lg border shadow transition-all duration-500 ease-in-out sm:w-64',
		className,
	)}
>
	<div class="card-image flex-none">
		<Image
			src={imageUrl}
			alt="Image"
			width={200}
			class="h-[350px] w-full rounded-md object-cover transition-transform duration-700 ease-in-out"
		/>
	</div>

	<div class="card-content mt-3 flex flex-1 flex-col justify-end space-y-1 p-3">
		<h3
			class="card-title line-clamp-1 text-xs font-bold leading-snug text-slate-900 sm:text-lg"
			title={name}
		>
			{name}
		</h3>
		{
			date && (
				<p class="card-date line-clamp-3 text-[8px] text-slate-600 sm:text-sm">
					Service Period: <span class="font-semibold">{date}</span>
				</p>
			)
		}
		{
			subtitle && (
				<p class="card-subtitle line-clamp-3 text-[8px] text-slate-600 sm:text-sm">
					{subtitle}
				</p>
			)
		}
	</div>
</li>
