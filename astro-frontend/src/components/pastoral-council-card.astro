---
import { Image } from "astro:assets";
import { Locale } from "~/enums/locale";
import { cn } from "~/helpers/cn.ts";
import { getLangFromUrl } from "~/i18n/utils";

interface Props {
  title: string;
  imageUrl: ImageMetadata;
  subtitle: string;
  class?: string;
}

const lang = getLangFromUrl(Astro.url);
const { title, subtitle, class: className, imageUrl } = Astro.props;
---

<div
  class={cn(
    "w-64 snap-start first:snap-align-none max-w-xs flex-shrink-0 border border-gray-200 duration-200 ease-in-out sm:w-64",
    className
  )}
>
  <div class="flex-none">
    <Image
      src={imageUrl}
      alt={`${title} ${subtitle} of Our Lady of Pompei Church`}
      class="h-[300px] w-full object-cover"
    />
  </div>

  <div
    class={cn(
      "font-roboto flex flex-1 flex-col justify-end space-y-1 p-3",
      { "font-noto-sans-kannada": lang === Locale.KOK }
    )}
  >
    <h3 class="text-lg font-bold leading-snug text-gray-800">
      {title}
    </h3>
    <p class="text-gray-700">
      {subtitle}
    </p>
  </div>
</div>
