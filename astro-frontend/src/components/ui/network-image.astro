---
import { Image } from 'astro:assets';
import { cn } from '~/helpers/cn';

interface Props {
	src: string;
	baseUrl?: string;
	width: number;
	height: number;
	alt?: string;
	class?: string;
}

const {
	src,
	baseUrl,
	width,
	height,
	alt,
	class: className,
	...rest
} = Astro.props;

const urlToUse = baseUrl
	? new URL(src, baseUrl)
	: new URL(src, import.meta.env.PUBLIC_STRAPI_URL);
---

<Image
	src={urlToUse.toString()}
	width={width}
	height={height}
	alt={alt ?? 'no alternative  text found'}
	class={cn('', className)}
	{...rest}
/>
