---
import { cn } from "~/helpers/cn";

interface Props {
  class?: string;
  style?: astroHTML.JSX.CSSProperties | undefined;
}
const { class: className, style, ...rest } = Astro.props;
---

<div
  class={cn(
    "mx-3 flex w-4/6 md:w-3/6 min-w-0 flex-none items-center justify-center rounded-lg max-h-[500px] transition-transform duration-300 ease-out",
    className,
  )}
  {...rest}
>
  <slot />
</div>