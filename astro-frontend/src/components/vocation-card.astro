---
import { Image } from 'astro:assets';

export interface Props {
  imageUrl: ImageMetadata;
  name: string;
  ward: string;
  dob?: string;
  dod?: string;
  congregation ?: string;
  parents?: string;
}

const { imageUrl, name, ward, dob, dod, congregation, parents } = Astro.props;
---

<div class="vocation-card hover:scale-[1.01] rounded-md border p-6 text-center max-w-md mx-auto transition-shadow">
  <div class="relative w-[230px] h-[300px] mx-auto mb-6 rounded-full overflow-hidden border-4 border-gray-200 shadow-md">
    <Image
      src={imageUrl}
      alt={name}
      class="w-full h-full object-cover"
      sizes="(max-width: 768px) 50vw, 25vw"
    />
  </div>

  <div class="details">
    <h3 class="text-lg lg:text-xl  font-semibold text-gray-900 mb-2">{name}</h3>

    <p class="text-md lg:text-sm text-blue-700 font-medium mb-2">{congregation}</p>
    {ward && <p class="text-md lg:text-sm text-gray-600 italic mb-1"><span class="font-semibold">Ward:</span> {ward}</p>}
    {dob && <p class="text-md lg:text-sm text-gray-600 mb-1"><span class="font-semibold">Date of Birth:</span> {dob}</p>}
    {dod && <p class="text-md lg:text-sm text-gray-600 mb-1"><span class="font-semibold">Date of Death:</span> {dod}</p>}
    {parents && <p class="text-md lg:text-sm text-gray-600 mb-1"><span class="font-semibold">Parents: </span> {parents}</p>}
  </div>
</div>
