---
import { cn } from "~/helpers/cn";
import HoverableLink from "./ui/hoverable-link.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import ShareLink from "./ui/share-link.astro";
import WhatsAppShare from "~/components/ui/whatsapp-share.tsx";
import NetworkImage from "./ui/network-image.astro";
import { Locale } from "~/enums/locale";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
  eventName: string;
  eventNameKok: string;
  imageUrl: string;
  imageWidth: number;
  imageHeight: number;
  shortDescriptionEn?: string;
  shortDescriptionKok?: string;
  facebookLink?: string;
  slug: string;
  class?: string;
  instagramLink?: string;
}

const {
  eventName,
  eventNameKok,
  imageUrl,
  shortDescriptionEn,
  shortDescriptionKok,
  imageWidth,
  imageHeight,
  slug,
  class: className,
  ...rest
} = Astro.props;

const eventUrl =
  lang === Locale.EN ? `/events/${slug}/` : `/kok/events/${slug}/`;

const displayTitle = lang === Locale.EN ? eventName : eventNameKok;
const displayDescription = lang === Locale.EN
  ? (shortDescriptionEn ?? shortDescriptionKok ?? "No description available")
  : (shortDescriptionKok ?? shortDescriptionEn ?? "No description available");
---

<div class={cn("flex flex-col border border-gray-200", className)} {...rest}>
  <div class="event-image w-full">
    <NetworkImage
      src={imageUrl}
      alt={displayTitle}
      width={imageWidth}
      height={imageHeight}
      class="object-fit aspect-[1.2/0.7] duration-700 ease-in-out"
    />
  </div>

  <div class={cn("relative p-4 flex flex-col flex-grow", lang === Locale.KOK ? "font-noto-sans-kannada" : "font-roboto")}>
    <div class="flex flex-col gap-2 flex-grow pb-12">
      <p class="text-xl font-bold text-slate-900">
        {displayTitle}
      </p>
      <p class="pb-4 text-justify text-base text-slate-700">
        {displayDescription}
      </p>
    </div>

    <div
      class={cn(
        "absolute bottom-4 left-4 right-4 flex justify-between items-center",
        lang === Locale.KOK ? "font-noto-sans-kannada" : "font-roboto",
      )}
    >
      <HoverableLink href={eventUrl}>
        {t("ui.more-button-read")}
        <span class="sr-only"> about {displayTitle}</span>
      </HoverableLink>
      <div class="flex items-center gap-2">


<WhatsAppShare
  client:load
  shareData={{ url: eventUrl, title: displayTitle }}
/>

        <ShareLink class="" shareData={{ url: eventUrl, title: displayTitle }} />
      </div>
    </div>
  </div>
</div>
