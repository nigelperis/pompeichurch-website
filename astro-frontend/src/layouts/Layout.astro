---
import '@fontsource/bona-nova-sc';
import '@fontsource/noto-sans-kannada';
import '@fontsource/poppins';
import poppinsRegular from '@fontsource/poppins/files/poppins-latin-500-normal.woff2?url';
import notoSansKannadaRegualar from '@fontsource/noto-sans-kannada/files/noto-sans-kannada-latin-500-normal.woff2?url';

import poppinsSemibold from '@fontsource/poppins/files/poppins-latin-600-normal.woff2?url';
import notoSansKannadaSemiBold from '@fontsource/noto-sans-kannada/files/noto-sans-kannada-latin-600-normal.woff2?url';
import 'aos/dist/aos.css';

import LanguageSwitcher from '~/components/language-switcher.astro';
import { getLangFromUrl } from '~/i18n/utils';
import Navbar from '~/components/navbar.astro';
import Footer from '~/components/footer.astro';
import ScrollTop from '~/components/scroll-top.astro';
const lang = getLangFromUrl(Astro.url);

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={poppinsRegular}
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={notoSansKannadaRegualar}
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={poppinsSemibold}
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={notoSansKannadaSemiBold}
			crossorigin="anonymous"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
  	@view-transition {
		navigation: auto; /* enabled! */}
	</style>
	</head>
	<body class="max-w-full overflow-x-hidden">
		<Navbar />
		<slot />
		<Footer />
		<LanguageSwitcher />
		<ScrollTop />
	</body>
	<script>
		import { aosInit } from '~/helpers/aos-config';
		aosInit();
	</script>
</html>
