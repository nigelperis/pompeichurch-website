# Database configuration
DATABASE_CLIENT=postgres
DATABASE_NAME=strapi          # Replace 'strapi' with your actual database name
DATABASE_USERNAME=postgres    # Replace 'postgres' with your database user
DATABASE_PASSWORD=admin       # Replace 'admin' with your secure password

# Application host and port
HOST=0.0.0.0                  # Use 0.0.0.0 to allow external connections
PORT=1337                     # Default port for Strapi, modify as needed

# Application keys and secrets (ensure you generate strong, unique values)
APP_KEYS="randomAppKey1,randomAppKey2"   # Generate your own unique app keys
API_TOKEN_SALT=uniqueApiTokenSalt        # Replace with a secure salt
ADMIN_JWT_SECRET=secureAdminJwtSecret    # Replace with a secure JWT secret
TRANSFER_TOKEN_SALT=uniqueTransferSalt   # Replace with a secure transfer token salt
JWT_SECRET=YourSecureJWTSecret           # Generate a strong, secure JWT secret